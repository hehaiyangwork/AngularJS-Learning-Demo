    <div class="row" >
        <div class="col-sm-12">
            <h1>Angular Demo 表单与验证</h1>
            <hr>
        </div>

        <div class="col-sm-12" >
            <form class="form-horizontal" name="loginForm">

                <div class="form-group has-feedback" ng-class="{'has-success': loginForm.username.$dirty&&loginForm.username.$valid, 'has-error': loginForm.username.$dirty&&loginForm.username.$invalid}">
                    <label for="inputUsername" class="col-sm-2 control-label">Username :</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" id="inputUsername" name="username" placeholder="User name" ng-model="user.name" required ng-minlength="4" ng-maxlength="16">
                        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true" ng-if="loginForm.username.$dirty&&loginForm.username.$valid"></span>
                        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true" ng-if="loginForm.username.$dirty&&loginForm.username.$invalid"></span>
                    </div>

                    <div class="col-sm-3">
                        <span class="help-block" ng-if="loginForm.username.$dirty&&loginForm.username.$error.required">用户名不能为空</span>
                        <span class="help-block" ng-if="loginForm.username.$dirty&&loginForm.username.$error.minlength">用户名不能少于4位</span>
                        <span class="help-block" ng-if="loginForm.username.$dirty&&loginForm.username.$error.maxlength">用户名不能多于16位</span>
                    </div>

                    <div class="col-sm-3">
                        <span class="help-block">校验是否成功: {{loginForm.username.$valid }}</span>
                        <span class="help-block">错误 $error 值: {{loginForm.username.$error }}</span>
                    </div>
                </div>


                <div class="form-group has-feedback" ng-class="{'has-success': loginForm.email.$dirty&&loginForm.email.$valid, 'has-error': loginForm.email.$dirty&&loginForm.email.$invalid}">
                    <label for="inputEmail" class="col-sm-2 control-label">Email :</label>
                    <div class="col-sm-3">
                        <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email" ng-model="user.email" required >
                        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true" ng-if="loginForm.email.$dirty&&loginForm.email.$valid"></span>
                        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true" ng-if="loginForm.email.$dirty&&loginForm.email.$invalid"></span>
                    </div>

                    <div class="col-sm-3">
                        <span class="help-block" ng-if="loginForm.email.$dirty&&loginForm.email.$error.required">邮箱不能为空</span>
                        <span class="help-block" ng-if="loginForm.email.$dirty&&loginForm.email.$error.email">邮箱格式不对</span>
                    </div>

                    <div class="col-sm-3">
                        <span class="help-block">校验是否成功: {{loginForm.email.$valid }}</span>
                        <span class="help-block">错误 $error 值: {{loginForm.email.$error }}</span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary" >提交</button>
                    </div>
                </div>

            </form>
