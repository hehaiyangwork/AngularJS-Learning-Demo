<div class="container">


    <div class="row" ng-controller="demo11Controller as demo11">
        <div class="col-sm-12">
            <h1>Angular Demo ngRepeat and Filter 循环与过滤器</h1>
            <hr>
        </div>

        <div class="col-sm-8">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="searchText" class="col-sm-2 control-label">关键词: </label>

                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="searchText" ng-model="demo11.data.searchText">
                    </div>
                </div>

                <!--<div class="form-group">-->
                <!--<div class="col-sm-offset-2 col-sm-10">-->
                <!--<button type="submit" class="btn btn-default">Search</button>-->
                <!--</div>-->
                <!--</div>-->

            </form>
        </div>

        <div class="col-sm-6">
            <ul class="list-group demo">
                <li class="list-group-item" ng-repeat="article in demo11.data.articles | filter:demo11.data.searchText"
                    ng-mouseenter="demo11.event.showArticleDeleteIcon($index)"
                    ng-mouseleave="demo11.event.hideArticleDeleteIcon()">
                    <span ng-class="{'listselected': $index === demo11.css.currentSelected}"
                          ng-click="demo11.event.clickArticle($index)">Title: {{ article.title }} </span>
                    <span class="glyphicon glyphicon-trash" ng-show="$index === demo11.css.currentDeleteIcon"></span>
                </li>
            </ul>
            <hr>
        </div>
    </div>


    <div class="row" ng-controller="demo12Controller as demo12">
